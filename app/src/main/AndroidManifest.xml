<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ioweyou">

    <!-- ðŸ‘‡ Add this line for Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IOU"
        android:networkSecurityConfig="@xml/network_security_config">



        <!-- SplashActivity (Launcher) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.IOU.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity (Landing Page with Navigation to Login/SignUp) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- LoginActivity (Handles User Login) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <!-- SignUpActivity (Handles User Registration) -->
        <activity
            android:name=".SignUpActivity"
            android:exported="true" />

        <!-- DashboardActivity (Main App Dashboard After Login/SignUp) -->
        <activity
            android:name=".DashboardActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
